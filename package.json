{
	"name": "sveltegram",
	"description": "Reactive Telegram widgets built with svelte",
	"version": "2.0.4",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --check --write .",
		"lint": "eslint --ignore-pattern .gitignore ."
	},
	"devDependencies": {
		"@eslint/js": "^9.24.0",
		"@sveltejs/adapter-cloudflare": "^6.0.1",
		"@sveltejs/kit": "^2.20.5",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"dotenv": "^16.5.0",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^16.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.11",
		"svelte": "^5.25.12",
		"svelte-check": "^4.1.5",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.29.1",
		"vite": "^6.2.6"
	},
	"type": "module",
	"author": "Amr <contact@a3k.me> (https://www.a3k.me/)",
	"keywords": [
		"svelte",
		"sveltekit",
		"telegram",
		"post",
		"comments",
		"discussion",
		"login",
		"auth",
		"widget",
		"embed"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/amr3k/sveltegram.git"
	},
	"homepage": "https://sveltegram.a3k.me",
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"workerd"
		]
	}
}
