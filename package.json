{
  "name": "sveltegram",
  "description": "Reactive Telegram widgets built with svelte",
  "version": "1.1.7",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --write --plugin-search-dir=. . && eslint --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "2.1.0",
    "@sveltejs/kit": "1.25.1",
    "@sveltejs/package": "2.2.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.1.16",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tslib": "^2.6.2",
    "typescript": "~5.2.2",
    "vite": "^4.5.1"
  },
  "type": "module",
  "author": "Amr <contact@a3k.me> (https://www.a3k.me/)",
  "keywords": [
    "svelte",
    "sveltekit",
    "telegram",
    "post",
    "comments",
    "discussion",
    "login",
    "auth",
    "widget",
    "embed"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/amr3k/sveltegram"
  },
  "homepage": "https://sveltegram.a3k.me",
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts"
}