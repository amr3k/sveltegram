{
	"name": "sveltegram",
	"description": "Reactive Telegram widgets built with svelte",
	"version": "1.2.0",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --ignore-path .gitignore --check --write .",
		"lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-path .gitignore ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "3.2.1",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"dotenv": "^16.4.5",
		"eslint": "^9.4.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.45.1",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"publint": "^0.2.8",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tslib": "^2.6.3",
		"typescript": "^5.5.0",
		"vite": "^5.4.4"
	},
	"type": "module",
	"author": "Amr <contact@a3k.me> (https://www.a3k.me/)",
	"keywords": [
		"svelte",
		"sveltekit",
		"telegram",
		"post",
		"comments",
		"discussion",
		"login",
		"auth",
		"widget",
		"embed"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/amr3k/sveltegram"
	},
	"homepage": "https://sveltegram.a3k.me",
	"peerDependencies": {
		"svelte": "^3.0.0 || ^4.0.0 || ^5.0.0"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b"
}
