{
	"name": "sveltegram",
	"description": "Reactive Telegram widgets built with svelte",
	"version": "2.0.0",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --ignore-path .gitignore --check --write .",
		"lint": "prettier --ignore-path .gitignore --check --write . && eslint --ignore-pattern .gitignore ."
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "4.0.0",
		"@sveltejs/kit": "^2.16.1",
		"@sveltejs/package": "^2.3.9",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"dotenv": "^16.4.7",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"svelte": "^5.19.2",
		"svelte-check": "^4.1.4",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.21.0",
		"vite": "^6.0.11"
	},
	"type": "module",
	"author": "Amr <contact@a3k.me> (https://www.a3k.me/)",
	"keywords": [
		"svelte",
		"sveltekit",
		"telegram",
		"post",
		"comments",
		"discussion",
		"login",
		"auth",
		"widget",
		"embed"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/amr3k/sveltegram.git"
	},
	"homepage": "https://sveltegram.a3k.me",
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b"
}
